<miruken:View x:Class="Test_App.Features.HelloWorld.HelloWorld"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:miruken="clr-namespace:Miruken.Mvc.Wpf;assembly=Miruken.Mvc.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">
        <Label x:Name="label" Content="Hello Miruken!" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF666666" FontSize="24"/>
        <Button x:Name="button" Content="About" Command="{miruken:Action About}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="0,0,0,-100"/>
        <Button x:Name="button_Copy" Content="Documentation" Command="{miruken:Action Documentation}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="102" Margin="10,10,188,270"/>
    </Grid>
</miruken:View>



